@{
  Layout = "_Layout";
}

<div class="container">
  <h1>List of authors: </h1>

  @if(Model.Count == 0)
    {
      <p>No authors has been added yet</p>
    }
    else
    {
      <ul>
      @foreach(var author in Model)
      {
        <li><a href='/authors/@author.GetId()'>@author.GetName()</a></li>
      }
      </ul>
    }

<a href = "/" class="btn btn-danger">Home</a>
<a href = "/authors/new" class="btn btn-warning">Add a new author</a>

</div>
